{
  "name": "@packetwatch/database",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "prisma/**/*"
  ],
  "scripts": {
    "build": "tsc && (cp -R src/generated dist/generated || true)",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "@packetwatch/typescript-config": "*",
    "@types/node": "^24.2.0",
    "prisma": "5.22.0",
    "typescript": "^5.9.2"
  }
}