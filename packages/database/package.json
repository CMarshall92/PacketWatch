{
    "name": "@packetwatch/database",
    "version": "0.0.0",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*",
        "prisma/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "prisma:generate": "npx prisma generate",
        "prisma:migrate": "npx prisma migrate dev",
        "prisma:studio": "npx prisma studio",
        "postinstall": "npm run prisma:generate"
    },
    "dependencies": {
        "@prisma/client": "^6.14.0"
    },
    "devDependencies": {
        "@packetwatch/typescript-config": "*",
        "@types/node": "^24.2.0",
        "prisma": "^6.14.0",
        "typescript": "^5.9.2"
    }
}