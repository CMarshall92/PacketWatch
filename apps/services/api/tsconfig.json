{
  "compilerOptions": {
    "target": "ES2020",
    "module": "EsNext",
    "rootDir": "src", // Your source code folder
    "outDir": "dist", // Where compiled JS will go
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Include all TS files in src/
  "exclude": ["node_modules", "dist"] // Donâ€™t compile these
}
