{
    "root": true,
    "ignorePatterns": [
        "node_modules/**",
        ".next/**",
        "out/**",
        ".turbo/**",
        "dist/**",
        "build/**",
        "*.json",
        "apps/**"
    ],
    "overrides": [
        {
            "files": [
                "*.js",
                "*.mjs",
                "*.ts"
            ],
            "env": {
                "node": true,
                "es2022": true
            },
            "extends": [
                "eslint:recommended"
            ],
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module"
            }
        }
    ]
}